<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eaeaea"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ads_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="微商快粉最新公告微商快粉最新公告微商快粉最新公告"
                android:textColor="#ffff00"
                android:textSize="@dimen/sp18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vip_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:drawableLeft="@drawable/ic_golden_vip"
                    android:drawablePadding="@dimen/dp5"
                    android:text="会员"
                    android:textColor="#f5a72a"
                    android:textSize="@dimen/sp16"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/vip_end_time_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vip_tx"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp2"
                    android:textColor="#f5a72a"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/filter_mode_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp5"
                    android:text="筛选模式:正常"
                    android:textColor="#f5a72a"
                    android:textSize="@dimen/sp14" />

                <com.dt.wsjf.view.BouncyBtnView
                    android:id="@+id/jiafen_btn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/jiafen_left_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jiafen_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/fensi_tip_bg"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:text="您还有0个加粉名额"
                    android:textColor="#ffff00" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/vip_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/shuoming_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/saixuan_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/haoduan_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/qingchu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/jiangshi_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/share_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.dt.wsjf.view.ItemView
                        android:id="@+id/about_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#55000000"
        android:clickable="false"
        android:orientation="horizontal"
        android:padding="@dimen/dp20"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp5"
            android:text="正在处理中，请稍后..."
            android:textColor="#ffff00"
            android:textSize="@dimen/sp20" />
    </LinearLayout>
</RelativeLayout>