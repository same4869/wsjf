<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comm_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/comm_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/comm_bg_dialog"
        android:clickable="true"
        android:minHeight="@dimen/dp200"
        android:minWidth="@dimen/dp389"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comm_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:textColor="#0D1F2A"
            android:textSize="@dimen/sp20" />

        <View
            android:id="@+id/comm_dialog_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/comm_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1.0"
            android:drawablePadding="@dimen/dp5"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp3"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:scrollbars="none"
            android:textColor="#0D1F2A"
            android:textSize="@dimen/sp17" />

        <FrameLayout
            android:id="@+id/comm_custom_layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/comm_dialog_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/seperator" />

        <LinearLayout
            android:id="@+id/comm_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layerType="software"
            android:orientation="horizontal">

            <Button
                android:id="@+id/comm_dialog_left_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/sp16" />

            <View
                android:id="@+id/comm_divider_view"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/seperator" />

            <Button
                android:id="@+id/comm_dialog_right_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>