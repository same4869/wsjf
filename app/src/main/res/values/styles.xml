<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Custom.AppCompat" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarSize">50dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/bc</item>
    </style>

    <style name="bc" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@android:color/holo_blue_dark</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="elevation">0dp</item>
    </style>

</resources>
